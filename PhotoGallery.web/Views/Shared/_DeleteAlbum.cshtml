@model PhotoGallery.core.Models.AlbumModel

<!--Modal for edit album-->
<div class="modal fade" id=@($"deleteAlbumModal{Model.AlbumID.ToString()}") tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Delete Photo Album</h4>
            </div>

            <div class="modal-body">
                <div class="text-center">
                    <h3 class="text-warning">Are you sure about this?</h3>
                    <h4>Once this album is gone, it's Asta La Vista baby</h4>
                </div>

                <form class="form-horizontal" method="post" action=@Url.Action("Delete", "Album", new { id = Model.AlbumID })>
                    
                    <div class="form-group">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary">Yes</button>
                            &nbsp;
                            <button class="btn btn-default" type="button" data-dismiss="modal">No</button>
                        </div>
                    </div>

                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

