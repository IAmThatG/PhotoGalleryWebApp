@model PhotoGallery.core.Models.AlbumModel

<!--Modal for edit album-->
<div class="modal fade" id=@($"editAlbumModal{Model.AlbumID.ToString()}") tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Edit Photo Album</h4>
            </div>

            <div class="modal-body">

                <form class="form-horizontal" method="post" action=@Url.Action("Edit", "Album")>
                    <div class="form-group">
                        <label class="col-md-3 control-label h5">Album Title</label>
                        <div class="col-md-9">
                            @Html.TextBoxFor(m => m.AlbumTitle, new { @class = "form-control", placeholder = "Album Title" })
                            @Html.ValidationMessage("AlbumTitle", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-3 control-label h5">Description</label>
                        <div class="col-md-9">
                            @Html.TextAreaFor(m => m.AlbumDescription, new { @class = "form-control", placeholder = "Describe Album" })
                            @Html.ValidationMessage("AlbumDescription", new { @class = "text-danger" })
                        </div>
                    </div>
                    @Html.HiddenFor(m => m.AlbumID)
                    <br>
                    <div class="form-group">
                        <div class="pull-right">
                            <button type="submit" class="btn btn-primary">Edit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
