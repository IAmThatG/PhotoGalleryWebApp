@model PhotoGallery.core.Models.AlbumModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <a href=@Url.Action("Index", "Home") class="btn btn-primary pull-left"><span class="fa fa-arrow-left"></span></a>
    <div class="page-header text-center"><h2>Create Album</h2></div>
</div>

<div class="row">
   <div class="col-md-6 col-md-offset-3">
       <form class="form-horizontal" method="post" action="">
           <div class="form-group">
               <label class="col-md-3 control-label h5">Album Title</label>
               <div class="col-md-9">
                   @Html.TextBoxFor(m => m.AlbumTitle, new { @class = "form-control", placeholder = "Album Title" })
                   @Html.ValidationMessage("AlbumTitle", new { @class = "text-danger" })
               </div>
           </div>
           <div class="form-group">
               <label class="col-md-3 control-label h5">Description</label>
               <div class="col-md-9">
                   @Html.TextAreaFor(m => m.AlbumDescription, new { @class = "form-control", placeholder = "Describe Album" })
                   @Html.ValidationMessage("AlbumDescription", new { @class = "text-danger" })
               </div>
           </div>
           <br>
           <div class="form-group">
               <div class="pull-right">
                   <button type="submit" class="btn btn-primary">Create</button>
               </div>
           </div>
       </form>
    </div>
</div>


